<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/space_20dp">
    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message_bottom_sheet_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_20sp"
        android:textStyle="bold"
        tools:text="Success Operation" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_description_bottom_sheet_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16sp"
        tools:text="Success Operation" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_image_bottom_sheet"
        android:layout_width="@dimen/size_image_bottom_sheet_success"
        android:layout_height="@dimen/size_image_bottom_sheet_success"
        app:tint="?attr/colorPrimary" />
</androidx.appcompat.widget.LinearLayoutCompat>