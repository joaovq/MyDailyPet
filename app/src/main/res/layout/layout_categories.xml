<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.appcompat.widget.LinearLayoutCompat
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <include
            android:id="@+id/lt_add_pet_category"
            layout="@layout/item_category"
            bind:icon="@{@drawable/ic_foot_pet}"
            bind:text="@{@string/text_add_pet}"
            />
        <include
            android:id="@+id/lt_daily_category"
            layout="@layout/item_category"
            bind:icon="@{@drawable/ic_calendar}"
            bind:text="@{@string/text_daily}"
            />
        <include
            android:id="@+id/lt_category"
            layout="@layout/item_category"
            bind:icon="@{@drawable/ic_add_box_category}"
            bind:text="@{@string/text_category}"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>